<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/nath"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:weightSum="10"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textSize="@dimen/optSize"
                android:textStyle="bold"
                android:textColor="@color/myWhite"
                android:text="@string/music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:background="@drawable/background_search"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/qoute_id"
                android:textColor="@color/myWhite"
                android:text="Music is the shorthand of emotion"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/background_search"
            android:layout_weight="5"
            android:weightSum="2"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_height="0dp">

                <LinearLayout
                    android:padding="20dp"
                    android:weightSum="5"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_weight="3"
                        android:id="@+id/allMusic_id"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_library_music_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_weight="2"
                        android:textSize="15sp"
                        android:textColor="@color/myWhite"
                        android:text="Songs"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="20dp"
                    android:weightSum="5"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_weight="3"
                        android:id="@+id/genres_id"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_folder_special_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_weight="2"
                        android:textSize="15sp"
                        android:textColor="@color/myWhite"
                        android:text="Genres"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="20dp"
                    android:weightSum="5"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_weight="3"
                        android:id="@+id/artists_id"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_weight="2"
                        android:textSize="15sp"
                        android:textColor="@color/myWhite"
                        android:text="Artists"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_height="0dp">

                <LinearLayout
                    android:padding="20dp"
                    android:weightSum="5"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_weight="3"
                        android:id="@+id/equalizer_id"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_surround_sound_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_weight="2"
                        android:textSize="15sp"
                        android:textColor="@color/myWhite"
                        android:text="Tune"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="20dp"
                    android:weightSum="5"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_weight="3"
                        android:id="@+id/theme_id"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_style_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_weight="2"
                        android:textSize="15sp"
                        android:textColor="@color/myWhite"
                        android:text="Theme"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="20dp"
                    android:weightSum="5"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_weight="3"
                        android:id="@+id/settings_id"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_settings_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_weight="2"
                        android:textSize="15sp"
                        android:textColor="@color/myWhite"
                        android:text="Settings"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textSize="@dimen/smallerSize"
                android:textStyle="bold"
                android:textColor="@color/myWhite"
                android:text="@string/mymusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="0dp">

            <ImageView
                android:src="@drawable/ic_add_circle_black_24dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:textSize="20sp"
                android:textColor="@color/myWhite"
                android:text="@string/createnewsongList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>